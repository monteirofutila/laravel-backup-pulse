{
    "name": "monteirofutila/pulse-spatie-laravel-backup",
    "description": "A Laravel Pulse card to monitor the health of the backups, and show an overview of all backups",
    "keywords": [
        "Monteiro Futila",
        "laravel",
        "pulse-spatie-laravel-backup"
    ],
    "homepage": "https://github.com/monteirofutila/pulse-spatie-laravel-backup",
    "license": "MIT",
    "authors": [
        {
            "name": "Monteiro Futila",
            "email": "jonquerfutila@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^10.0||^11.0",
        "laravel/pulse": "^1.2",
        "spatie/laravel-backup": "^9.1",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "larastan/larastan": "^2.9",
        "orchestra/testbench": "^9.0.0||^8.22.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "pestphp/pest-plugin-laravel": "^2.3",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "MonteiroFutila\\PulseSpatieLaravelBackup\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MonteiroFutila\\PulseSpatieLaravelBackup\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-pulse-backup --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MonteiroFutila\\PulseSpatieLaravelBackup\\PulseSpatieLaravelBackupServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
